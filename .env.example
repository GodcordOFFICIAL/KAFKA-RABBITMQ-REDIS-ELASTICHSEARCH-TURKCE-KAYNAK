# Kafka, RabbitMQ, Redis ve Elasticsearch - Environment Configuration
# Bu dosyayı .env olarak kopyalayın ve değerleri projenize göre düzenleyin

# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
PROJECT_NAME=kafka-rabbitmq-redis-elasticsearch
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# ==============================================================================
# KAFKA CONFIGURATION
# ==============================================================================
# Kafka Cluster
KAFKA_VERSION=3.5.1
KAFKA_CLUSTER_SIZE=1
KAFKA_EXTERNAL_PORT=9092
KAFKA_INTERNAL_PORT=9093
KAFKA_JMX_PORT=9999

# Zookeeper
ZOOKEEPER_VERSION=3.8.2
ZOOKEEPER_PORT=2181
ZOOKEEPER_ADMIN_PORT=8080

# Kafka UI
KAFKA_UI_PORT=8080
KAFKA_UI_VERSION=latest

# Kafka Connect
KAFKA_CONNECT_PORT=8083
KAFKA_CONNECT_UI_PORT=8084

# Schema Registry
SCHEMA_REGISTRY_PORT=8085

# Kafka Topics Configuration
KAFKA_DEFAULT_PARTITIONS=3
KAFKA_DEFAULT_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_DELETE_TOPIC_ENABLE=true

# Kafka Performance
KAFKA_HEAP_SIZE=1G
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_LOG_SEGMENT_BYTES=1073741824
KAFKA_NUM_NETWORK_THREADS=8
KAFKA_NUM_IO_THREADS=8

# ==============================================================================
# RABBITMQ CONFIGURATION
# ==============================================================================
RABBITMQ_VERSION=3.12-management
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_PROMETHEUS_PORT=15692

# RabbitMQ Authentication
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123
RABBITMQ_DEFAULT_VHOST=/

# RabbitMQ Performance
RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.6
RABBITMQ_DISK_FREE_LIMIT=2147483648

# RabbitMQ Clustering
RABBITMQ_CLUSTER_NAME=rabbit@localhost
RABBITMQ_ERLANG_COOKIE=SWQOKODSQALRPCLNMEQG

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_VERSION=7.2-alpine
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Redis Commander
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_VERSION=latest

# Redis Insight
REDIS_INSIGHT_PORT=8082

# Redis Performance
REDIS_MAXMEMORY=1gb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_SAVE_INTERVAL=300 10

# Redis Cluster (for advanced setups)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODE_TIMEOUT=15000
REDIS_CLUSTER_REPLICA_VALIDITY_FACTOR=10

# ==============================================================================
# ELASTICSEARCH CONFIGURATION
# ==============================================================================
ELASTICSEARCH_VERSION=8.11.0
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# Kibana
KIBANA_VERSION=8.11.0
KIBANA_PORT=5601

# Elasticsearch Security
ELASTICSEARCH_SECURITY_ENABLED=false
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Elasticsearch Performance
ELASTICSEARCH_HEAP_SIZE=1g
ELASTICSEARCH_DISCOVERY_TYPE=single-node
ELASTICSEARCH_CLUSTER_NAME=docker-cluster
ELASTICSEARCH_NODE_NAME=elasticsearch-node-1

# Elasticsearch Indices
ELASTICSEARCH_DEFAULT_SHARDS=1
ELASTICSEARCH_DEFAULT_REPLICAS=0
ELASTICSEARCH_INDEX_REFRESH_INTERVAL=1s

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_VERSION=latest

# Grafana
GRAFANA_PORT=3000
GRAFANA_VERSION=latest
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana123

# Jaeger (Distributed Tracing)
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================
# Java
JAVA_VERSION=11
MAVEN_VERSION=3.9.5

# Python
PYTHON_VERSION=3.11
PIP_VERSION=23.3

# Node.js
NODE_VERSION=18
NPM_VERSION=9

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Log retention
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=100MB

# Log paths
KAFKA_LOG_PATH=./logs/kafka
RABBITMQ_LOG_PATH=./logs/rabbitmq
REDIS_LOG_PATH=./logs/redis
ELASTICSEARCH_LOG_PATH=./logs/elasticsearch

# ==============================================================================
# DATA PERSISTENCE CONFIGURATION
# ==============================================================================
# Data paths
KAFKA_DATA_PATH=./data/kafka
ZOOKEEPER_DATA_PATH=./data/zookeeper
RABBITMQ_DATA_PATH=./data/rabbitmq
REDIS_DATA_PATH=./data/redis
ELASTICSEARCH_DATA_PATH=./data/elasticsearch

# Backup paths
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ==============================================================================
# NETWORK CONFIGURATION
# ==============================================================================
DOCKER_NETWORK_NAME=messaging-platform
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# External access
EXTERNAL_HOST=localhost
EXTERNAL_DOMAIN=localhost

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================
# Test data
TEST_MESSAGE_COUNT=1000
TEST_BATCH_SIZE=100
TEST_CONCURRENT_PRODUCERS=5
TEST_CONCURRENT_CONSUMERS=3

# Performance testing
PERF_TEST_DURATION=300
PERF_TEST_RATE=1000
PERF_TEST_MESSAGE_SIZE=1024

# ==============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# ==============================================================================
# ENVIRONMENT=production
# LOG_LEVEL=WARN
# KAFKA_LOG_RETENTION_HOURS=720
# ELASTICSEARCH_SECURITY_ENABLED=true
# RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.4
# REDIS_MAXMEMORY=4gb

# ==============================================================================
# CUSTOM CONFIGURATION
# ==============================================================================
# Add your custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2